{
  "name": "beaverkiosk",
  "version": "1.0.0",
  "description": "Electron-based launcher with a Node.js backend and React front-end dashboard.",
  "main": "electron-main.js",
  "scripts": {
    "build": "npm run build:backend && npm run build:web",
    "build:backend": "tsc -p tsconfig.json",
    "build:web": "node scripts/build-react.mjs",
    "start": "npm run build && electron .",
    "backend": "npm run build && node dist/backend/server.js"
  },
  "keywords": [
    "electron",
    "react",
    "launcher"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.7",
    "electron": "^28.3.3",
    "esbuild": "^0.21.4",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "express": "^4.19.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  }
}
