{
  "appId": "com.beaversuite.kiosk",
  "productName": "BeaverKiosk",
  "directories": {
    "output": "release",
    "buildResources": "electron"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "backend/**/*",
    "package.json"
  ],
  "extraMetadata": {
    "main": "electron/main.js"
  },
  "mac": {
    "category": "public.app-category.productivity"
  },
  "win": {
    "target": "nsis"
  },
  "linux": {
    "target": ["AppImage"],
    "category": "Utility"
  }
}
